<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:showIn="@layout/activity_home">

    <ImageView
        android:id="@+id/runsSummaryIcon"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/runs_summary_icon" />

    <TextView
        android:id="@+id/runsSummaryTime"
        style="@style/blue_label.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/runsSummaryDistance"
        app:layout_constraintStart_toEndOf="@+id/runsSummaryIcon"
        tools:text="576 mins" />

    <TextView
        android:id="@+id/runsSummaryDistance"
        style="@style/blue_label.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="@+id/runsSummaryIcon"
        app:layout_constraintStart_toStartOf="@+id/runsSummaryTime"
        tools:text="28,000 m" />

    <View
        android:id="@+id/runsSummaryDivider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runsSummaryIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>